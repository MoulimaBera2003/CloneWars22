import java.util.Scanner;
public class Item 
{
	    String itemName,itemidNo;
	    int itemQuantity;
	    double itemPrice;
	    public Item(String itemName,String itemidNo,int itemQuantity,double itemPrice){
	        this.itemName = itemName;
	        this.itemidNo = itemidNo;
	        this.itemQuantity = itemQuantity;
	        this.itemPrice = itemPrice;
	    }
	    public Item(String itemName,String itemidNo,int itemQuantity){
	        this.itemName = itemName;
	        this.itemidNo = itemidNo;
	        this.itemQuantity = itemQuantity;
	        itemPrice = 500;
	    }
	    public Item(String itemName,String itemidNo){
	        this.itemName = itemName;
	        this.itemidNo = itemidNo;
	        itemQuantity = 1;
	        itemPrice = 500;
	    }
}
public class Customer 
{
	    private String name,idNo;
	    private double balance;
	    Item item;
	    public Customer(String name,String idNo,double balance){
	        this.name = name;
	        this.idNo = idNo;
	        this.balance = balance;
	    }
	    public Customer(String name,String idNo){
	        this.name = name;
	        this.idNo = idNo;
	        balance = 5000;
	    }
	    public void print(){
	        System.out.println("Customer Name is: " + name);
	        System.out.println("Customer id is: " + idNo);
	        System.out.println("Item Name is: " + item.itemName);
	        System.out.println("Item id is: " + item.itemidNo);
	        System.out.println("Item Quantity is: " + item.itemQuantity);
	        System.out.println("Item Price is: " + item.itemPrice);
	        System.out.println("Balance is: "+ balance);
	    }
	    public void buyItem(Item item){
	        if (item.itemQuantity>0) {
	            if (balance> item.itemPrice*item.itemQuantity) {
	                balance = balance - item.itemPrice*item.itemQuantity;
	            }
	            else{
	                System.out.println("Insufficient balance");
	                return;
	            }
	        }
	        else{
	            System.out.println("Order is not valid");
	            return;
	        }
	        this.item = item;
	        print();
	    }
	}

public class TestStore {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter customer name: ");
        String Customer_name = sc.next();
        System.out.print("Enter customer id: ");
        String Customer_id = sc.next();
        System.out.print("Enter Customer balance: ");
        double balance = sc.nextDouble();
        Customer c1 = new Customer(Customer_name,Customer_id,balance);
        System.out.println("");
        System.out.print("Enter Item Name: ");
        String Item_name = sc.next();
        System.out.print("Enter Item id: ");
        String Item_id = sc.next();
        System.out.print("Enter Item Quantity: ");
        int Item_quantity = sc.nextInt();
        System.out.print("Enter Item Price: ");
        double Item_price = sc.nextDouble();
        Item I1 = new Item(Item_name,Item_id,Item_quantity,Item_price);
        c1.buyItem(I1);
        System.out.println("\n");
        System.out.print("Enter Item Name: ");
        Item_name = sc.next();
        System.out.print("Enter Item id: ");
        Item_id = sc.next();
        System.out.print("Enter Item Quantity: ");
        Item_quantity = sc.nextInt();
        Item I2 = new Item(Item_name,Item_id,Item_quantity);
        c1.buyItem(I2);
        System.out.print("Enter Item Name: ");
        Item_name = sc.next();
        System.out.print("Enter Item id: ");
        Item_id = sc.next();
        Item I3= new Item(Item_name,Item_id);
        c1.buyItem(I3);
        sc.close();
    }
}
